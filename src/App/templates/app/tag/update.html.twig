{% extends '@layout/default.html.twig' %} {# para concatenar no twig usa o ~ #}
{% block title %}Edição de Tag - {{ parent() }}{% endblock %}
{% block content %}
    {% include '@app/tag/_form-elements.html.twig' %}

    {% set submit = form.get('submit') %}
    {% do submit.setAttribute('class','btn btn-primary').setLabel('Editar') %}

    {% do form.setAttribute('action', url('tag.update', {id: form.getObject().id})) %}
    {% do form.prepare() %}
    <div class="row">
        <div class="col-md-8">
            <div class="box box-primary">
                <div class="box-body">
                    {{ form().openTag(form) | raw}}
                    {{ formHidden(form.get('_method')) }}
                    {% include '@app/tag/_form.html.twig' %}
                    <div class="box-footer">
                        {{ formButton(submit) }}
                    </div>
                   {{ form().closeTag()| raw}}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block page_header %}
    Edição de Tag
{% endblock %}