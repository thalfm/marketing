{% extends '@layout/default.html.twig' %} {# para concatenar no twig usa o ~ #}
{% block title %}Listagem de tags - {{ parent() }}{% endblock %}
{% block content %}
    <div class="row">
        <div class="box">
            <div class="box-header">
                <a href="{{ url('tag.create') }}" class="btn btn-app">
                    <i class="fa fa-plus-circle"></i> Novo
                </a>
            </div>
            <div class="box-body">
                <table class="table table-bordered">
                    <tbody>
                        <tr>
                            <th style="width: 10px;">#</th>
                            <th>Nome</th>
                            <th>Ações</th>
                        </tr>
                        {% for tag in tags %}
                            <tr>
                                <td>{{ tag.id }}</td>
                                <td>{{ tag.name }}</td>
                                <td>
                                    <a href="{{ url('tag.update',{id: tag.id}) }}">Editar</a> |
                                    <a href="{{ url('tag.delete',{id: tag.id}) }}">Excluir</a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}

{% block page_header %}
    Listagem de Tags
{% endblock %}